<h1><%= @task.title %></h1>

<p><%= @task.body %></p>

<ul>
  <li><%= link_to "Edit", edit_task_path(@task) %></li>
  <li><%= link_to "Destroy", task_path(@task), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>Comments</h2>
<%= render @task.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>


